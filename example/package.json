{
  "name": "skeleton-nestjs",
  "version": "0.0.1",
  "description": "basis for any NestJS project",
  "author": {
    "name": "drzioner",
    "email": "drzioner@gmail.com"
  },
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "entity:create": "ts-node node_modules/.bin/typeorm entity:create --config ./ormconfig.js --name",
    "migration:create": "ts-node node_modules/.bin/typeorm migration:create --config ./ormconfig.js --name",
    "migration:generate": "ts-node node_modules/.bin/typeorm migration:generate --config ./ormconfig.js --name",
    "migration:run": "ts-node node_modules/.bin/typeorm migration:run --config ./ormconfig.js",
    "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert --config ./ormconfig.js",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "schema:drop": "ts-node node_modules/.bin/typeorm schema:drop --config ./ormconfig.js",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "seed:clear-run": "npm run schema:drop && npm run migration:run && npm run seed:run"
  },
  "dependencies": {
    "@drzioner/nestjs-paginate": "file:../drzioner-nestjs-paginate-v0.0.1.tgz",
    "@nestjs-modules/mailer": "^1.6.0",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "faker": "^5.5.3",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.6.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "7.0.0",
    "swagger-ui-express": "^4.1.6",
    "ts-mapper": "^1.2.4",
    "typeorm": "^0.2.32",
    "typeorm-seeding": "^1.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.5",
    "@types/jest": "^26.0.22",
    "@types/multer": "^1.4.5",
    "@types/node": "15.0.2",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "9.1.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
